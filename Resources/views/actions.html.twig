<div class="input-prepend input-append action-container">
    <span class="add-on">
        <span>{{ 'actions'|trans({}, 'datatable') }}:</span>
    </span>
    <select id="action-select-{{ alias }}" name="action-select-{{ alias }}">
        <option value=""></option>
        {% for key, action in datatable.Actions %}
            <option value="{{ path(action.route, action.params) }}">{{ action.caption|trans }}</option>
        {% endfor %}
    </select>
    <button type="button" class="btn" id="action-apply-button-{{ alias }}">{{ 'apply'|trans({}, 'datatable') }}</button>
</div>
