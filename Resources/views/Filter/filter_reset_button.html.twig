<input type="reset" class="filter-reset-button button {{ options.class }}" value="{{ 'reset'|trans({}, 'datatable') }}"/>
<script type="text/javascript">
    $(document).ready(function() {
        $('.filter-reset-button').click(function(e) {
            this.form.reset();
            e.preventDefault();
            $('.filter-apply-button').click();
        });
    });
</script>
